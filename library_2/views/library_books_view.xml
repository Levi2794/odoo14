<odoo>
    <data>
        <!-- Vista From para libro -->
        <record id="library_book_from_view" model="ir.ui.view">
            <field name="name">Library Book From</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <form string="Book Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="isbn"/>
                            <field name="category_id" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Vista tree-->
        <record id="library_book_tree_view" model="ir.ui.view">
            <field name="name">Library Book Tree</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <tree string="Book Tree">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.books</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Crear nuevos libros
              </p>
            </field>
        </record>

        <!-- view menu -->
        <menuitem id="library_root"
                  name="Library"
                  sequence="0"
                  groups="library_2.group_library_user,library_2.group_library_manager"/>

        <menuitem id="library_category"
                  name="Library"
                  parent="library_root"
                  sequence="0"/>

        <menuitem id="library_book"
                  name="Book"
                  parent="library_category"
                  action="action_library_book"
                  sequence="1"/>
    </data>
</odoo>